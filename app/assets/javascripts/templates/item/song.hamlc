.banner.form.alert-success
	.title.ellipsis
		= @title
	.artist.dancer.ellipsis
		= @artist
	.action
		%span.play.w_btn
			%i.icon-play
		%span.pause.w_btn
			%i.icon-pause
		%span.back.w_btn
			%i.icon-reply
.lyrics_container
.panel.text_center
	- unless @liked
		%a.like(href="#like")
			%span.icon-thumbs-up